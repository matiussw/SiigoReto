pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.image('gradle:6.8.3-jdk11').inside {
                        sh 'gradle clean build'
                    }
                }
            }
        }

        stage('Test with Serenity BDD') {
            steps {
                script {
                    docker.image('gradle:6.8.3-jdk11').inside {
                        sh 'gradle test aggregate'
                    }
                }
            }
        }
    post {
        always {
            junit 'build/test-results/test/*.xml'
        }
    }
}
