pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'ReqRes-Test/gradlew clean build'
            }
        }

        stage('Test with Serenity BDD') {
            steps {
                sh 'ReqRes-Test/gradlew test aggregate'
            }
        }

        stage('Verify Test Results') {
            steps {
                sh 'ls -la ReqRes-Test/build/test-results/test'  // Verifica los archivos de resultados de pruebas
            }
        }
    }

    post {
        always {
            junit 'ReqRes-Test/build/test-results/test/*.xml'
            publishHTML([
                reportDir: 'ReqRes-Test/build/reports/tests/test',
                reportFiles: 'index.html',
                reportName: 'Test Report',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
        }
    }
}
